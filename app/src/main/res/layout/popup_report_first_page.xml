<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="50dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/cardView">

        <TextView
            android:id="@+id/reportFirstTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:text="Your monthly report is here!"
            android:textSize="20sp"
            android:fontFamily="@font/segoe2"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="386dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <!-- Highest carbon emission day -->

            <LinearLayout
                android:layout_width="181dp"
                android:layout_height="333dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/largeCarbon"
                    android:layout_width="142dp"
                    android:layout_gravity="center"
                    android:layout_height="154dp" />

                <TextView
                    android:id="@+id/Most_carbon_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#e43f5a"
                    android:textSize="20sp"
                    android:fontFamily="@font/segoe2"
                    android:textStyle="bold"
                    card_view:text="@tools:sample/date/ddmmyy" />


                <TextView
                    android:id="@+id/most_carbon_day"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/segoe2"
                    android:textColor="#e43f5a" />

                <TextView
                    android:id="@+id/most_carbon_day_value"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:fontFamily="@font/segoe2"
                    android:textColor="#e43f5a"
                    card_view:text="@tools:sample/us_zipcodes" />
            </LinearLayout>

            <!--Lowest Carbon emission day -->

            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="333dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/lowCarbon"
                    android:layout_width="152dp"
                    android:layout_gravity="center"
                    android:layout_height="154dp" />

                <TextView
                    android:id="@+id/lowest_carbon_date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textColor="#162447"
                    android:textSize="20sp"
                    android:fontFamily="@font/segoe2"
                    android:textStyle="bold"
                    card_view:text="@tools:sample/date/ddmmyy" />


                <TextView
                    android:id="@+id/lowest_carbon_day"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:fontFamily="@font/segoe2"
                    android:textColor="#162447" />

                <TextView
                    android:id="@+id/lowest_carbon_day_value"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:gravity="center"
                    android:textColor="#162447"
                    android:fontFamily="@font/segoe2"
                    card_view:text="@tools:sample/us_zipcodes" />
            </LinearLayout>


        </LinearLayout>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="400dp"
            android:id="@+id/firstPageNextBtn"
            android:fontFamily="@font/segoe2"
            android:background="@drawable/round_button"
            android:text="Next"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>