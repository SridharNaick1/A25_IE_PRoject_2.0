<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/test_main_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/wasteImageView"
        android:left="106dp"
        android:top="76dp"
        android:layout_width="200dp"
        android:layout_height="204dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:src="@drawable/image_app_trans"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="117dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/segoe2"
            android:gravity="center"
            android:text="Email: "
            android:textColor="@color/test_text_color"
            android:textSize="15sp" />


        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/userEmail"
            android:fontFamily="@font/segoe2"
            android:background="@drawable/signup_login_right"
            android:textColorHint="#210C1B"
            android:textColor="@color/test_text_color"
            android:hint=""/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="117dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:text="Password: "
            android:gravity="center"
            android:textColor="@color/test_text_color"
            android:fontFamily="@font/segoe2"
            android:textSize="15sp" />


        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/userPassword"
            android:fontFamily="@font/segoe2"
            android:hint=""
            android:background="@drawable/signup_login_right"
            android:textColorHint="#210C1B"
            android:textColor="@color/test_text_color"
            android:inputType="textPassword"/>
    </LinearLayout>


    <TextView
        android:id="@+id/signUpValidation"
        android:layout_width="393dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/segoe2"
        android:textColor="#960000"
        android:textSize="20sp"
        tools:text="@tools:sample/last_names" />

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="194dp"
        android:layout_height="61dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/signup_login_left"
        android:fontFamily="@font/segoe1"
        android:gravity="center"
        android:left="109dp"
        android:radius="15dp"
        android:text="@string/log_in"
        android:textColor="@color/softBackground"
        android:textSize="20sp" />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="194dp"
        android:layout_height="61dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/signup_login_left"
        android:fontFamily="@font/segoe1"
        android:gravity="center"
        android:left="109dp"
        android:radius="15dp"
        android:text="@string/sign_up"
        android:textColor="@color/softBackground"
        android:textSize="20dp" />


</LinearLayout>


